<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/hot"/>
    
    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/welcome"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/id_login_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:textSize="16dp"
                android:hint="请输入用户名/手机号"
                android:textColorHint="#ddd"
                android:maxLines="1"
                android:background="@color/noColor"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/login_down"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/liner_eee"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/id_login_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:textSize="16dp"
                android:hint="请输入密码"
                android:password="true"
                android:textColorHint="#ddd"
                android:maxLines="1"
                android:background="@color/noColor"/>

            <ImageView
                android:id="@+id/id_login_eye"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/eye_close"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/liner_eee"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/id_login_err"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:textColor="#fc6262"/>

        <Button
            android:id="@+id/id_loginbutton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/login_btn"
            android:layout_margin="25dp"
            android:paddingBottom="5dp"
            android:text="登    录"
            android:gravity="center"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <TextView
                android:id="@+id/id_login_register"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="新用户注册"/>
            <TextView
                android:id="@+id/id_login_forget"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="忘记密码？"/>

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="沁湖科技|版权所有"/>

</FrameLayout>