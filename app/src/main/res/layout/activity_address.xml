<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/re_newfriends"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true">

                <com.qinhu.oneschool.MyClass.CircleImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/default_fmessage"
                    />

                <TextView
                    android:id="@+id/tv_newfriends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="69dp"
                    android:text="新的朋友"
                    android:textColor="#353535"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/unread_count_bg"
                    android:gravity="center"
                    android:text="1"
                    android:visibility="gone"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#eee" />

            <RelativeLayout
                android:id="@+id/re_chatroom"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true">

                <com.qinhu.oneschool.MyClass.CircleImageView
                    android:id="@+id/iv_avatar2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/default_chatroom"
                    />

                <TextView
                    android:id="@+id/tv_chatroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="69dp"
                    android:text="我的群组"
                    android:textColor="#353535"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#eee" />

            <RelativeLayout
                android:id="@+id/publicservice"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true">

                <com.qinhu.oneschool.MyClass.CircleImageView
                    android:id="@+id/iv_avatar4"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/default_servicebrand_contact"
                    />

                <TextView
                    android:id="@+id/tv_servicebrand_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="69dp"
                    android:text="公众号"
                    android:textColor="#353535"
                    android:textSize="16sp" />
            </RelativeLayout>
            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:divider="@null"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eeeeee" />
            <TextView
                android:id="@+id/show_no_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="还没有好友，快去添加吧"
                android:textColor="@color/group_list_gray"
                android:visibility="gone" />

        </LinearLayout>




</LinearLayout>
