<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/id_todaylist_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/tableorange"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:text="1~2"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#eee"
            android:layout_margin="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_todaylist_kcm"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="bottom"
                android:textStyle="bold"
                android:textColor="#333"
                tools:text="软件测试技术与工具"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/clock"
                    android:layout_marginRight="2dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/id_todaylist_sksj"
                    android:layout_width="wrap_content"
                    android:minWidth="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="10sp"
                    tools:text="10:15-11:00"/>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/sloc"
                    android:layout_marginRight="2dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/id_todaylist_skdd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="10sp"
                    tools:text="恒大楼三区102"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
