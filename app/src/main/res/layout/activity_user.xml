<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/backgroundpic"/>

        <ImageView
            android:id="@+id/id_user_backbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/back_white"/>

        <com.qinhu.oneschool.MyClass.CircleImageView
            android:id="@+id/id_user_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/backgroundpic"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"/>

        <EditText
            android:id="@+id/id_user_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="来自火星的男人"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:enabled="false"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="120dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="性别"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/id_user_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:enabled="false"

                    android:text="男"
                    android:textSize="15sp"
                    android:textColor="#000" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/line_beizhu"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="备注"

                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/id_user_beizhu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:enabled="false"
                    android:hint="点击添加备注"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:padding="17dp"
                    android:src="@drawable/rightthin"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="签名"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/id_user_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="该用户还没有设置签名"
                    android:textColor="#000"
                    android:enabled="false"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#eee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="学校"
                    android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="武汉科技大学"
                    android:textColor="#000"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="院系"
                    android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="计算机科学与技术"
                    android:textColor="#000"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="专业"
                    android:textColor="#000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="软件工程"
                    android:textColor="#000"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eee"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="邮箱"
                    android:enabled="false"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/id_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="该用户还没有设置邮箱哟"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <com.qinhu.oneschool.MyClass.ShapeCornerBgView
        android:id="@+id/id_user_friend"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#fff"
        app:appBgColor="@color/tableorange"
        android:visibility="gone"
        app:appRadius="5dp"
        android:text="发消息"/>

    <com.qinhu.oneschool.MyClass.ShapeCornerBgView
        android:id="@+id/id_user_complie"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#fff"
        app:appBgColor="@color/tableorange"
        app:appRadius="5dp"
        android:text="编辑资料"/>

    <LinearLayout
        android:id="@+id/id_user_notfriend"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <com.qinhu.oneschool.MyClass.ShapeCornerBgView
            android:id="@+id/id_user_notfriend_add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#fff"
            app:appBgColor="@color/tableorange"
            app:appRadius="5dp"
            android:text="加为好友"/>

        <com.qinhu.oneschool.MyClass.ShapeCornerBgView
            android:id="@+id/id_user_notfriend_chat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"
            app:appBgColor="@color/tableorange"
            app:appRadius="5dp"
            android:text="发消息"/>

    </LinearLayout>

</LinearLayout>
