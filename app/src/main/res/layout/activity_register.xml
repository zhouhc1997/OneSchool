<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/id_register_reback"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="bottom">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/reback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="注册"
            android:textSize="20dp" />
        </LinearLayout>


    </android.support.design.widget.CollapsingToolbarLayout>


        <LinearLayout
            android:id="@+id/id_register_edit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="6"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/inbox">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/id_register_username"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:background="#00000000"
                        android:inputType="phone"
                        android:hint="用户名/手机号"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textColorHint="#ddd"
                        android:textSize="16dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="13dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="3"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/inbox">

                    <EditText
                        android:id="@+id/id_register_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:hint="验证码"
                        android:textColorHint="#ddd"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:background="#00000000" />

                    <TextView
                        android:id="@+id/id_register_codebnt"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:layout_marginRight="13dp"
                        android:layout_weight="1"
                        android:text="发送验证码" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="6"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/inbox">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/id_register_password"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:textSize="16dp"
                        android:hint="密码"
                        android:textColorHint="#ddd"
                        android:maxLines="1"
                        android:password="true"
                        android:textAlignment="center"
                        android:background="#00000000" />

                    <ImageView
                        android:id="@+id/id_register_clear"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="13dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/eye_close" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="6"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/inbox">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/id_register_repassword"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:textSize="16dp"
                        android:hint="确认密码"
                        android:textColorHint="#ddd"
                        android:maxLines="1"
                        android:password="true"
                        android:textAlignment="center"
                        android:background="#00000000" />

                    <ImageView
                        android:id="@+id/id_register_reclear"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="13dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/eye_close"  />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_register_submit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>

                <TextView
                    android:id="@+id/id_register_err"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#fc6262"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"></View>

                <LinearLayout
                    android:id="@+id/id_registerbutton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:layout_gravity="center_vertical">

                    <com.qinhu.oneschool.MyClass.ShapeCornerBgView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="注       册"
                        android:textColor="#fff"
                        android:textSize="16dp"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        app:appRadius="5dp"
                        app:appBgColor="@color/selected"/>

                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"></View>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"></View>
</LinearLayout>