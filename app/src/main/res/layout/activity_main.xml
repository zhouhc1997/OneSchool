<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/id_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/liner_eee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_home_icon"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/home_a"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/id_home_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/home"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/selected"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/chat_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_chat_icon"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/message_b"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/id_chat_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/message"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/no_selected"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/study_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_study_icon"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@drawable/study_b"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/id_study_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/study"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/no_selected"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mine_tab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_mine_icon"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingTop="8dp"
                android:src="@drawable/mine_b" />

            <TextView
                android:id="@+id/id_mine_text"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/mine"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/no_selected"
                android:textSize="10sp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>