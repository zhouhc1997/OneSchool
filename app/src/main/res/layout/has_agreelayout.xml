<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <com.qinhu.oneschool.MyClass.CircleImageView
            android:id="@+id/id_questiondetail_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/schoollogo"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/id_questiondetail_nickname"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:gravity="bottom"
                android:text="致命守护者"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/id_questiondetail_time"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="2018/12/6"
                android:textSize="11sp" />

        </LinearLayout>

        <com.qinhu.oneschool.MyClass.ShapeCornerBgView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已采纳"
            android:textStyle="bold"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="2dp"
            android:textSize="8sp"
            android:textColor="@color/white"
            android:padding="2dp"
            app:appBgColor="@color/selected"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_questiondetail_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/id_questiondetail_money"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:gravity="center">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/gift"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#0099FF"
            android:text="赞赏作者"/>

    </LinearLayout>


</LinearLayout>