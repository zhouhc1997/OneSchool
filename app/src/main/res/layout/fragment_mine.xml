<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Fragments.MineFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="fitXY"
            android:src="@drawable/mine_background"/>

        <ImageView
            android:id="@+id/id_mine_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/mine_setting"/>

        <com.qinhu.oneschool.MyClass.CircleImageView
            android:id="@+id/id_mine_avatar"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginTop="101dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/id_mine_nickname"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:text="来自火星的男人"/>


        <ImageView
            android:id="@+id/id_mine_write"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/write"/>

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/id_mine_wallet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:background="@drawable/tv_bg_selector">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="18.25dp"
                android:paddingTop="18.25dp"
                android:src="@drawable/wallet"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#ABABAB"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:text="钱包"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/right"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/id_mine_vip"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:background="@drawable/tv_bg_selector">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="16dp"
                android:src="@drawable/vip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#ABABAB"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:text="会员特权"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/right"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/liner_eee"/>

        <RelativeLayout
            android:id="@+id/id_mine_mypunish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:background="@drawable/tv_bg_selector">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="17dp"
                android:src="@drawable/mypunish"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#ABABAB"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:text="我的发布"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/right"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/id_mine_mycollection"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:background="@drawable/tv_bg_selector">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="16dp"
                android:src="@drawable/mycollection"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#ABABAB"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:text="我的收藏"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/right"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/liner_eee"/>

        <RelativeLayout
            android:id="@+id/id_mine_device"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:background="@drawable/tv_bg_selector">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="16dp"
                android:src="@drawable/device"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#ABABAB"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:text="意见反馈"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/right"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/id_mine_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:background="@drawable/tv_bg_selector">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:src="@drawable/update"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#ABABAB"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:text="版本更新"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/right"/>


        </RelativeLayout>

    </LinearLayout>



</LinearLayout>