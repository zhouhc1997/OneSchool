<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home.SchoolNewsActivity">

    <View
        android:id="@+id/id_mheader_top"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white"/>

    <android.support.design.widget.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/id_schoolnews_backbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/reback"
            android:padding="10dp"
            android:layout_gravity="bottom"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/jiaowuchu"
            android:layout_gravity="center"/>
    </android.support.design.widget.CollapsingToolbarLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_article_schoolrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:overScrollMode="never"/>

</LinearLayout>